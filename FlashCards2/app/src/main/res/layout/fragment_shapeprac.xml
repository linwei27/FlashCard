<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!--    顶部说明-->

    <TextView
        android:id="@+id/text_mode"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:gravity="center_vertical"
        android:text="形状练习（简单模式）"
        android:layout_width="match_parent"
        android:layout_height="34dp"/>

    <!--    中间分隔线-->
    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--    题目正文-->

        <!--        题号-->
        <TextView
            android:id="@+id/text_order"
            android:text="1"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <!--逗号-->
        <TextView
            android:text=","
            android:id="@+id/symbol"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/text_order"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/text_question"
            android:layout_toRightOf="@+id/symbol"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:text="请选出听到的形状:"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>

        <!--        喇叭图标-->
        <ImageButton
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@id/text_question"
            android:id="@+id/horn"
            android:src="@drawable/horn"
            android:background="#00FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        选项A-->
        <LinearLayout
            android:layout_toLeftOf="@id/cankao"
            android:id="@+id/LinearA"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/text_A"
                android:src="@drawable/shape01"
                android:layout_width="130dp"
                android:layout_height="130dp"/>

            <Button
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/btn_A"
                android:stateListAnimator="@null"
                android:text="A"
                android:textSize="17sp"
                android:textColor="@color/blue"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_circle3"
                />

        </LinearLayout>

        <!--        中间参考线-->
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/cankao"
            android:layout_width="30dp"
            android:layout_height="1dp"/>

        <!--        选项B-->
        <LinearLayout
            android:layout_toRightOf="@id/cankao"
            android:id="@id/LinearB"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/text_B"
                android:layout_width="130dp"
                android:src="@drawable/shape03"
                android:layout_height="130dp"/>

            <Button
                android:id="@+id/btn_B"
                android:layout_marginTop="20dp"
                android:stateListAnimator="@null"
                android:text="B"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textColor="@color/blue"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_circle3"
                />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        选项C-->
        <LinearLayout
            android:layout_toLeftOf="@id/cankao1"
            android:id="@+id/LinearC"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/text_C"
                android:src="@drawable/shape05"
                android:layout_width="130dp"
                android:layout_height="130dp"/>

            <Button
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/btn_C"
                android:stateListAnimator="@null"
                android:text="C"
                android:textSize="17sp"
                android:textColor="@color/blue"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_circle3"
                />

        </LinearLayout>

        <!--        中间参考线-->
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/cankao1"
            android:layout_width="30dp"
            android:layout_height="1dp"/>

        <!--        选项D-->
        <LinearLayout
            android:layout_toRightOf="@id/cankao1"
            android:id="@id/LinearD"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/text_D"
                android:layout_width="130dp"
                android:src="@drawable/shape09"
                android:layout_height="130dp"/>

            <Button
                android:id="@+id/btn_D"
                android:layout_marginTop="20dp"
                android:stateListAnimator="@null"
                android:text="D"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textColor="@color/blue"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_circle3"
                />

        </LinearLayout>

    </RelativeLayout>




</LinearLayout>
