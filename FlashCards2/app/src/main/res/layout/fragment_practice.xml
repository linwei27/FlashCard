<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

<!--    顶部说明-->

    <TextView
        android:id="@+id/text_mode"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:gravity="center_vertical"
        android:text="数字练习（简单模式）"
        android:layout_width="match_parent"
        android:layout_height="34dp"/>

    <!--    中间分隔线-->
    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--    题目正文-->

<!--        题号-->
        <TextView
            android:id="@+id/text_order"
            android:text="1"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
<!--逗号-->
        <TextView
            android:text=","
            android:id="@+id/symbol"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/text_order"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/text_question"
            android:layout_toRightOf="@+id/symbol"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:text="请选出听到的数字:"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>

<!--        喇叭图标-->
        <ImageButton
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@id/text_question"
            android:id="@+id/horn"
            android:src="@drawable/horn"
            android:background="#00FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/LinearA"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_A"
            android:layout_marginLeft="30dp"
            android:stateListAnimator="@null"
            android:text="A"
            android:textSize="17sp"
            android:textColor="@color/blue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_circle3"
            />


        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/text_A"
            android:text="1"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearB"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_B"
            android:layout_marginLeft="30dp"
            android:stateListAnimator="@null"
            android:text="B"
            android:textSize="17sp"
            android:textColor="@color/blue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_circle3"
            />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/text_B"
            android:text="1"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearC"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_C"
            android:layout_marginLeft="30dp"
            android:stateListAnimator="@null"
            android:text="C"
            android:textSize="17sp"
            android:textColor="@color/blue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_circle3"
            />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/text_C"
            android:text="1"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearD"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_D"
            android:layout_marginLeft="30dp"
            android:stateListAnimator="@null"
            android:text="D"
            android:textSize="17sp"
            android:textColor="@color/blue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_circle3"
            />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/text_D"
            android:text="1"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>
