<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/ll_container"
        android:orientation="horizontal"
        android:gravity="bottom|center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/ll_first"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                style="@style/TabButton"
                android:drawableTop="@drawable/tab_first_selector"
                android:text="学习" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                style="@style/TabButton"
                android:drawableTop="@drawable/tab_second_selector"
                android:text="临摹" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_third"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                style="@style/TabButton"
                android:drawableTop="@drawable/tab_third_selector"
                android:text="练习" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fourth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                style="@style/TabButton"
                android:drawableTop="@drawable/tab_fourth_selector"
                android:text="我的" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


